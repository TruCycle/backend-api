NODE_ENV=development
PORT=3000

# Toggle database integration (TypeORM)
# Set to true when you have a Postgres instance available (local or hosted)
ENABLE_DB=true

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=trucycle
DB_SSL=false
DB_LOGGING=false

# Dev only: allow TypeORM to sync schema for quick start
TYPEORM_SYNC=true

# CORS
CORS_ORIGINS=*

# Auth (JWT)
JWT_SECRET=change-me
JWT_EXPIRES_IN=7d

# App base URL (for verification links)
APP_BASE_URL=http://localhost:3000

# Email (Resend)
# Generate an API key at https://resend.com
RESEND_API_KEY=
MAIL_FROM="TruCycle <no-reply@trucycle.local>"

# QR code hosting base URL (used as a fallback if per-item URL not set)
# For Cloudinary, this would look like:
#   https://res.cloudinary.com/<cloud-name>/image/upload/qrs
ITEM_QR_BASE_URL=

# Cloudinary (for QR PNG storage)
# Create a Cloudinary account and set these values.
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Optional: folder to store QR images in your Cloudinary account
CLOUDINARY_QR_FOLDER=qrs
# Optional: folder to store chat images in your Cloudinary account
CLOUDINARY_MESSAGE_FOLDER=messages

# Climatiq API for CO2 estimation
# Get a key at https://www.climatiq.io/
CLIMATIQ_API_KEY=
# Factor ID to use for weight-based estimation (set appropriately for your items)
# Example: electricity-energy_source_grid_mix... (see Climatiq catalog)
CLIMATIQ_EMISSION_FACTOR_ID=
CLIMATIQ_API_URL=https://api.climatiq.io/data/v1/estimate

# Environmental goals
# Optional override for the default 50kg monthly savings target shown in impact metrics
MONTHLY_CO2_SAVINGS_GOAL_KG=50

# Rewards (wallet & ledger)
# Currency code for points; stored as 3 chars
REWARDS_CURRENCY=PTS
# Amounts credited on claim completion
# To collector (exchange/donate flows)
REWARD_CLAIM_COLLECTOR=10
# To donor (exchange/donate flows)
REWARD_CLAIM_DONOR=5

# Nearby item email alerts
# Radius (km) used to email users near a drop-off location
NEARBY_ITEM_ALERT_RADIUS_KM=20
# Safety cap for recipients per item to avoid spamming
NEARBY_ITEM_ALERT_MAX_RECIPIENTS=200
