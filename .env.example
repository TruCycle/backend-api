NODE_ENV=development
PORT=3000

# Toggle database integration (TypeORM)
# Set to true when you have a Postgres instance available (local or hosted)
ENABLE_DB=true

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=trucycle
DB_SSL=false
DB_LOGGING=false

# Dev only: allow TypeORM to sync schema for quick start
TYPEORM_SYNC=true

# CORS
CORS_ORIGINS=*

# Auth (JWT)
JWT_SECRET=change-me
JWT_EXPIRES_IN=7d

# App base URL (for verification links)
APP_BASE_URL=http://localhost:3000

# Email (Resend)
# Generate an API key at https://resend.com
RESEND_API_KEY=
MAIL_FROM="TruCycle <no-reply@trucycle.local>"

# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=trucycle
S3_FORCE_PATH_STYLE=true
S3_PRESIGN_EXPIRES=900
